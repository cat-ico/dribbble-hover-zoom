{
  "name": "Dribbble shot hover preview",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "web_accessible_resources": [
    "img/webIcon.svg"
  ],
  "content_scripts": [
    {
      "js": [
        "content/index.ts"
      ],
      "css": [
        "content/index.css"
      ],
      "matches": [
        "*://dribbble.com/*"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "tabs"
  ]
}